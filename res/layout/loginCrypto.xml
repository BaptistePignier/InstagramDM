<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ProgressBar
            android:id="@+id/pBarlogin"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:indeterminate="true"
            android:visibility="invisible"/>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true">

        <TextView
            android:text="Enter username "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:textSize="15sp"
            android:layout_marginTop="150dp"
            android:layout_centerHorizontal="true"/>
            />
       
        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:singleLine="true"
            android:textColor="#999999"
            android:textSize="14dip"
            android:layout_below="@id/username"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:text="Enter password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/password"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            
            android:layout_below="@id/editTextTextEmailAddress"
            />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:singleLine="true"
            android:textColor="#999999"
            android:textSize="14dip"
            android:layout_below="@id/password"
            android:layout_centerHorizontal="true"
            />

        <CheckBox android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Password"
            android:layout_below="@id/editTextTextPassword"
            android:layout_centerHorizontal="true"
            
            
            />
        <TextView
            android:text="Wrong Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/errorTextview"
            android:visibility="invisible"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            
            android:layout_below="@id/checkBox"
            />
        <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_login"
            android:layout_below="@id/errorTextview"
            android:layout_centerHorizontal="true"
            
            />
        <TextView
            android:text="If this method doesn't work, click on the button below to connect through WebView"
            android:layout_width="wrap_content"
            android:maxWidth="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/webviewText"
            android:textSize="15sp" 
            android:layout_below="@id/button_login"
            android:layout_centerHorizontal="true"

            />
        <Button
            android:text="Connect with webview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/webviewButton"
            android:layout_below="@id/webviewText"
            android:layout_centerHorizontal="true"

            />

    </RelativeLayout>
</RelativeLayout>